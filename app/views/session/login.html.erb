<h1 class="h3 mb-3 fw-normal"><%= t(:signing_in) %></h1>

<%= form_with url: session_create_url, method: :post, local: true do |f| %>
    <div class='row'>
        <div class='col-5'>&nbsp;</div>
        <div class='form-group col-2'>
            <label for='login'> <%= t(:login) %>: </label>
            <%= f.text_field :login, required: true, class: 'form-control'%>
            <br>
            <label for='password'> <%= t(:password) %>: </label>
            <%= f.password_field :password, required: true, class: 'form-control' %>
            <br>
            <%= f.submit t(:sign_in), required: true, class: 'btn btn-primary' %>
        </div>
        <div class='col-5'></div>
    </div>
<% end %>

<br>
<%= button_to t(:sign_up), new_user_path, class: 'btn btn-secondary', method: :get %>


